<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/backgroud_gray">

    <TextView
            android:layout_width="200dp"
            android:textColor="#000000"
            android:layout_height="40dp"
            android:id="@+id/textwelcome" android:textSize="20dp"/>

    <Button
            android:background="@drawable/btn_blue"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Cerrar Sesion"
            android:id="@+id/logout"
            android:textSize="13dp"

            android:layout_below="@+id/btchangepass"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:id="@+id/lname"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/textwelcome"
            android:textSize="20dp"/>

    <Button
        android:background="@drawable/btn_blue"
        style="@style/ButtonText"
        android:id="@+id/btchangepass"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textwelcome"
        android:text="Cambiar ContraseÃ±a"

        android:textSize="13dp" />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Panel"

            android:id="@+id/textView" android:layout_below="@+id/logout" android:layout_alignParentRight="true"
            android:textSize="18dp" android:textColor="#000000" android:textAlignment="center"
        android:gravity="center" />

</RelativeLayout>