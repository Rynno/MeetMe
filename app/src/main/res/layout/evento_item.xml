    <!-- Title Of Song-->
    <TextView
        android:id="@+id/txt_nombre_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evento:"
        android:layout_marginRight="5dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dip"
        android:textColor="#570000"
        android:typeface="sans"
        android:textSize="18dip"
        android:textStyle="bold"/>

    <!-- Artist Name -->

    <TextView
        android:id="@+id/txt_establecimiento"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nombre_evento"
        android:textColor="#343434"
        android:textSize="13dip"
        android:layout_marginLeft="8dip"
        android:textStyle="bold"
        android:layout_marginTop="3dip"
        android:text="Establecimiento"/>

    <TextView
        android:id="@+id/txt_ciudad_evento"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_establecimiento"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginLeft="8dip"
        android:textStyle="bold"
        android:layout_marginTop="2dip"
        android:text="Ciudad"/>

    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/txt_fecha_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/txt_nombre_evento"
        android:gravity="right"
        android:text="Fecha:"
        android:layout_marginRight="5dip"
        android:textSize="14dip"
        android:textColor="#000981"
        android:textStyle="bold"/>

    <!-- Rightend Arrow -->
    <ImageView

        android:layout_width="35dip"
        android:layout_height="65dip"
        android:src="@drawable/arrow_orange"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/imageView" />



</RelativeLayout>